{% extends 'base.html.twig' %}

{% block title %}Kategorijos{% endblock %}

{% block body %}

    <div class="container" style="width: 350px; margin-left: 0px;">
        <h1>Kategorijos</h1>

        <table class="table table-striped">
            <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.Name }}</td>
                    <td>
                        <a class="btn btn-primary" href="{{ path('category_edit', {'id': category.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a class="btn btn-primary" href="{{ path('category_new') }}">Create new</a>
    </div>

{% endblock %}
