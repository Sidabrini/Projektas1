{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ user.Name }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ user.Lastname }}</td>
            </tr>
            <tr>
                <th>Birthdate</th>
                <td>{{ user.Birthdate ? user.Birthdate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.Email }}</td>
            </tr>
            <tr>
                <th>Password_hash</th>
                <td>{{ user.PasswordHash }}</td>
            </tr>
            <tr>
                <th>IsAdmin</th>
                <td>{{ user.IsAdmin ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-secondary" href="{{ path('user_index') }}">Grįžti atgal</a>

    <a class="btn btn-secondary" href="{{ path('user_edit', {'id': user.id}) }}">Edit</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
