{% extends 'base.html.twig' %}

{% block title %}Event {{ event.Title }}{% endblock %}

{% block body %}
    <h1>Event {{ event.Title }}</h1>

    <table class="table table-striped">
        <tbody class="thead-dark">
            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ event.Title }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ event.Category }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ event.City }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ event.Address }}</td>
            </tr>
            <tr>
                <th>Place</th>
                <td>{{ event.Place }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ event.Date ? event.Date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Time</th>
                <td>{{ event.Time ? event.Time|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ event.Duration ? event.Duration|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ event.Price }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ event.Description }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-secondary" href="{{ path('event_index') }}">back to list</a>

    {% if is_granted('ROLE_ADMIN') %}
        <a class="btn btn-primary" href="{{ path('event_edit', {'id': event.id}) }}">edit</a>
        {{ include('event/_delete_form.html.twig') }}
    {% endif %}

{% endblock %}
